    private void btnMenuOpen_Click()
    {
        Toggle_MobileSidebar_Container_State_CSS = "transition ease-in-out duration-500 transform translate-x-0";
        Toggle_MobileSidebar_BackContainer_State_CSS = "fixed";

        this.StateHasChanged();
    }

    private void btnMenuClose_Click()
    {
        Toggle_MobileSidebar_Container_State_CSS = "transition ease-in-out duration-500 transform -translate-x-full";
        Toggle_MobileSidebar_BackContainer_State_CSS = "hidden";

        this.StateHasChanged();
    }

    #endregion
       
